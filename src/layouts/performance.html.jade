---
layout: default
---

- var entracte = ""
if document.entracte
	- var entracte = (document.entracte == "1") ? " с одним антрактом" : " без антракта"

- var rate = (document.rate && document.rate.length) ? " «" + document.rate + "»" : ""

article#post.post

	header
		if document.navlinks
			- var navlinks = document.navlinks
			nav.posts-nav
				ul.pager
					if navlinks.url.prev
						li.previous-link
							a(href=navlinks.url.prev) ← #{navlinks.title.prev}
					if navlinks.url.next
						li.next-link
							a(href=navlinks.url.next) #{navlinks.title.next} →

	h1= document.title + rate

	if document.poster && document.poster.length
		figure
			img(src=document.poster title=document.title alt=document.title)

	if document.author && document.author.length
		h2=document.author
	if document.genre && document.genre.length
		p: strong=document.genre

	if document.authors && document.authors.length
		//- - console.log("\n")
		//- - console.dir(document.authors)
		dl.authors.dl-horizontal
			each author in document.authors
				each key, value in author
					dt(style="width:250px;text-align:left;")=value
					dd(style="margin-left:250px")=key

	if document.synopsis && document.synopsis.length
		p=document.synopsis

	if document.premiere_date && document.premiere_date.length
		p Премьера состоялась #{document.premiere_date}
	if document.duration && document.duration.length
		p Длительность спектакля — #{document.duration}#{entracte}

	.post-content!= content

	if document.photo && document.photo.length
		.photos
			each image in document.photo
				figure
					img(src=image)

	footer
		if document.navlinks
			- var navlinks = document.navlinks
			nav.posts-nav
				ul.pager
					if navlinks.url.prev
						li.previous-link
							a(href=navlinks.url.prev) ← #{navlinks.title.prev}
					if navlinks.url.next
						li.next-link
							a(href=navlinks.url.next) #{navlinks.title.next} →
